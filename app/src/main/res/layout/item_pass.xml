<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">
    <LinearLayout
            android:layout_width="391dp"
            android:layout_height="match_parent"
            android:padding="16dp" android:orientation="vertical">
        <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teacher_item_picture"
                style="@style/TeacherItemImage" tools:srcCompat="@tools:sample/avatars"
        />

        <RatingBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/teacher_item_ratingbar"
                style="@style/TeacherItemRatingBar"/>
        <TextView
                android:accessibilityLiveRegion="@android:integer/config_longAnimTime"
                android:text="Id:"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="44dp"
                tools:layout_editor_absoluteX="185dp"
                android:id="@+id/tvId"/>
        <TextView
                android:text="Name"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="121dp"
                tools:layout_editor_absoluteX="185dp"
                android:id="@+id/tvName"/>
        <TextView
                android:text="UserName"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="189dp"
                tools:layout_editor_absoluteX="185dp"
                android:id="@+id/tvUserName"/>
        <TextView
                android:text="Email"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvEmail"/>
        <TextView
                android:text="Phone"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvPhone"/>

        <TextView
                android:text="Website"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvWebsite"/>
        <TextView
                android:text="Street"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvStreet"/>
        <TextView
                android:text="Stree"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvStree"/>
        <TextView
                android:text="Stre"

                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvStre"/>
        <TextView
                android:text="Stre"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="200dp"
                android:id="@+id/tvStr"/>


    </LinearLayout>
</android.support.v7.widget.CardView>